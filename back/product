<?php
$servername = "localhost";
$username = "root"; // à adapter si différent
$password = ""; // à adapter selon ton installation
$dbname = "ecommerce"; // nom de ta base de données

// Exemple de données
$id_product = 101;
$name = 'Clavier mécanique';
$description = 'Clavier rétroéclairé avec switchs bleus';
$price = 79.99;
$stock_quantity = 25;
$id_category = 2;

$sql = "INSERT INTO products (Id_product, name, description, price, stock_quantity, Id_category)
        VALUES (?, ?, ?, ?, ?, ?)";
$stmt = $pdo->prepare($sql);
$stmt->execute([$id_product, $name, $description, $price, $stock_quantity, $id_category]);

echo "Produit inséré avec succès.";
?>